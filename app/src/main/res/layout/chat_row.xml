<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ChatTopLay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"


    >


    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/circul"
        android:gravity="center">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/message_author_image"
            android:layout_width="37dp"
            android:contentDescription="@string/message_sender_picture"
            android:layout_height="37dp"
            android:background="@drawable/user_pic"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="@drawable/them"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:paddingStart="5dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/message_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold|italic"/>


        <ImageView
            android:id="@+id/message_image"
            android:visibility="gone"
            android:layout_width="150dp"
            android:contentDescription="@string/message_image"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="italic"
            />
    </LinearLayout>


</LinearLayout>